{
  "permissions": {
    "allow": [
      "mcp__serena__list_dir",
      "mcp__serena__activate_project",
      "default_api:replace",
      "default_api:save_memory",
      "default_api:run_shell_command",
      "default_api:write_file",
      "default_api:web_fetch",
      "default_api:discovered_tool_*",
      "replace",
      "save_memory",
      "run_shell_command",
      "write_file",
      "web_fetch",
      "read_file",
      "search_file_content",
      "glob",
      "list_directory",
      "codebase_investigator",
      "google_web_search"
    ],
    "deny": [
      "Bash(rm:*)",
      "Bash(rmdir:*)",
      "Bash(del:*)",
      "PowerShell(Remove-Item:*)"
    ],
    "ask": [],
    "defaultMode": "acceptEdits"
  },
  "enabledMcpjsonServers": [
    "serena",
    "context7",
    "sequential-thinking"
  ],
  "mcpServers": {
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "serena": {
      "transport": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server"
      ]
    },
    "context7": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ]
    }
  },
  "env": {
    "MAX_THINKING_TOKENS": "0"
  }
}